<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.AppointmentMenuController">
    <children>
        <Label layoutX="14.0" layoutY="14.0" prefHeight="66.0" prefWidth="250.0" text="Appointment">
            <font>
                <Font size="24.0" />
            </font>
        </Label>
        <VBox layoutX="14.0" layoutY="75.0" prefHeight="358.0" prefWidth="100.0" spacing="20.0">
            <children>
                <Label text="Appointment ID" />
                <Label text="Title" />
                <Label text="Description" />
                <Label text="Location" />
            <Label text="Contact" />
            <Label text="Type" />
            <Label text="Start" />
            <Label text="End" />
            <Label text="Customer ID" />
            <Label text="User ID" />
            </children>
        </VBox>
        <VBox layoutX="106.0" layoutY="75.0" prefHeight="191.0" prefWidth="125.0" spacing="12.0">
            <children>
                <TextField fx:id="aidField" disable="true" editable="false" />
                <TextField fx:id="titleField" />
                <TextField fx:id="descField" />
                <TextField fx:id="locationField" />
                <ComboBox fx:id="contactBox" prefWidth="150.0" />
                <ComboBox fx:id="typeBox" prefWidth="150.0" />
                <ComboBox fx:id="startBox" prefWidth="150.0" />
                <ComboBox fx:id="endBox" prefWidth="150.0" />
            <ComboBox fx:id="customerBox" prefWidth="150.0" />
            <ComboBox fx:id="userBox" prefWidth="150.0" />
            </children>
        </VBox>
        <TableView fx:id="appointmentTable" layoutX="246.0" layoutY="63.0" prefHeight="334.0" prefWidth="562.0">
            <columns>
                <TableColumn fx:id="aidColumn" prefWidth="39.0" text="ID" />
                <TableColumn fx:id="titleColumn" prefWidth="53.0" text="Title" />
                <TableColumn fx:id="descriptionColumn" prefWidth="82.0" text="Description" />
                <TableColumn fx:id="locationColumn" prefWidth="70.0" text="Location" />
                <TableColumn fx:id="contactColumn" prefWidth="65.0" text="Contact" />
                <TableColumn fx:id="typeColumn" prefWidth="52.0" text="Type" />
                <TableColumn fx:id="startColumn" prefWidth="51.0" text="Start" />
                <TableColumn fx:id="endColumn" prefWidth="57.0" text="End" />
                <TableColumn fx:id="cidColumn" prefWidth="47.0" text="CustID" />
                <TableColumn fx:id="uidColumn" prefWidth="43.0" text="UserID" />
            </columns>
        </TableView>
        <Button fx:id="saveButton" layoutX="172.0" layoutY="460.0" mnemonicParsing="false" onAction="#saveButtonClick" prefHeight="25.0" prefWidth="118.0" text="Save" />
        <Button fx:id="backButton" layoutX="645.0" layoutY="460.0" mnemonicParsing="false" onAction="#backButtonClick" prefHeight="25.0" prefWidth="125.0" text="Back" />
        <Button fx:id="updateButton" layoutX="332.0" layoutY="460.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="118.0" text="Update" />
        <Button fx:id="deleteButton" layoutX="482.0" layoutY="460.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="125.0" text="Delete" />
      <Button fx:id="clearButton" layoutX="64.0" layoutY="448.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="86.0" text="Clear" />
    </children>

</AnchorPane>
